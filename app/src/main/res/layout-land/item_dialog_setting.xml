<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

<!--    cancel image-->
    <LinearLayout
        android:gravity="end|top"
        android:id="@id/linear"
        android:backgroundTint="@null"
        android:translationZ="90dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_cancel"
            android:src="@mipmap/ic_cancel"
            android:layout_width="42dp"
            android:layout_height="42dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_setting"
                android:textSize="23sp"
                android:textStyle="normal"
                android:textColor="@color/black"/>

            <!--                sound-->
            <LinearLayout
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="23sp"
                    android:text="@string/str_sound"/>


                <com.bitvale.switcher.SwitcherX
                    android:id="@+id/sv_sound"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:switcher_on_color="@color/red"
                    app:switcher_off_color="@color/grey"
                    android:checked="false"
                    />


            </LinearLayout>

            <!--                vibration-->
            <LinearLayout
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="23sp"
                    android:text="@string/str_vibration"/>


                <com.bitvale.switcher.SwitcherX
                    android:id="@+id/sv_vibration"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:switcher_on_color="@color/red"
                    app:switcher_off_color="@color/grey"
                    android:checked="true"
                    />


            </LinearLayout>

            <!--                brightness-->
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_brightness"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="23sp"/>

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/sb_brightness"
                    android:layout_marginTop="15dp"
                    android:max="100"
                    android:progress="60"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/seekbar_custom"
                    android:backgroundTint="@null"
                    android:layout_width="match_parent"
                    android:progressDrawable="@drawable/progress"
                    android:thumb="@drawable/thumb"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!--                language-->
            <LinearLayout
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_language"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="normal"/>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_english_flag"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_english_flag"/>

                    <ImageView
                        android:id="@+id/iv_russian_flag"
                        android:layout_weight="1"
                        android:layout_margin="15dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_russian_flag"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</FrameLayout>